{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "outDir": "./dist",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "rootDirs": ["src", "stories"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "tmp", "src/setupTests.ts"]
}
